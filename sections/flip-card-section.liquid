{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
{{ 'flip-card-section.css' | asset_url | stylesheet_tag }}

<style>
  /* Critical CSS to ensure basic layout works immediately */
  .swiper {
    width: 100%;
    padding: 20px;
    padding-bottom: 50px;
  }

  .card-container {
    width: 245px;
    height: 350px;
    margin: 0 auto;
  }
</style>

<div class="page-width">
  <div class="swiper mySwiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide" {{ block.shopify_attributes }}>
          <div class="card-container">
            <div class="card">
              <div class="card-front">
                {% if block.settings.front_image != blank %}
                  {{
                    block.settings.front_image
                    | image_url: width: 245
                    | image_tag: loading: 'lazy', class: 'front-image', alt: block.settings.front_title
                  }}
                {% else %}
                  {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg front-image' }}
                {% endif %}
                <div class="overlay"></div>
                <h3 class="centered">{{ block.settings.front_title }}</h3>
              </div>
              <div class="card-back">
                <div class="content-box">
                  <div class="toolbox">
                    <h3>TOOLBOX</h3>
                  </div>
                  <div class="product-container {% if block.settings.product_2 == blank %}one-product{% elsif block.settings.product_3 == blank %}two-products{% else %}three-products{% endif %}">
                    {% if block.settings.product_1 != blank %}
                      <div class="product-item">
                        <a href="{{ block.settings.product_1.url }}">
                          {{
                            block.settings.product_1.featured_image
                            | image_url: width: 100
                            | image_tag: loading: 'lazy', alt: block.settings.product_1.title
                          }}
                        </a>
                      </div>
                    {% endif %}

                    {% if block.settings.product_2 != blank %}
                      <div class="product-item">
                        <a href="{{ block.settings.product_2.url }}">
                          {{
                            block.settings.product_2.featured_image
                            | image_url: width: 100
                            | image_tag: loading: 'lazy', alt: block.settings.product_2.title
                          }}
                        </a>
                      </div>
                    {% endif %}

                    {% if block.settings.product_3 != blank %}
                      <div class="product-item">
                        <a href="{{ block.settings.product_3.url }}">
                          {{
                            block.settings.product_3.featured_image
                            | image_url: width: 100
                            | image_tag: loading: 'lazy', alt: block.settings.product_3.title
                          }}
                        </a>
                      </div>
                    {% endif %}
                  </div>
                </div>
                <p>{{ block.settings.back_description }}</p>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="swiper-pagination"></div>
  </div>
</div>

<script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer></script>

<script defer>
  window.addEventListener('load', function () {
    var swiper = new Swiper('.mySwiper', {
      slidesPerView: 1,
      spaceBetween: 10,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      breakpoints: {
        520: {
          slidesPerView: 2,
          spaceBetween: 20,
        },
        800: {
          slidesPerView: 3,
          spaceBetween: 30,
        },
        1060: {
          slidesPerView: 4,
          spaceBetween: 30,
        },
        1320: {
          slidesPerView: 5,
          spaceBetween: 30,
        },
      },
    });
  });
</script>

{% schema %}
{
  "name": "Flip Cards",
  "tag": "section",
  "class": "flip-cards-section",
  "settings": [],
  "blocks": [
    {
      "type": "flip_card",
      "name": "Card",
      "limit": 10,
      "settings": [
        {
          "type": "image_picker",
          "id": "front_image",
          "label": "Front Image"
        },
        {
          "type": "text",
          "id": "front_title",
          "label": "Front Title",
          "default": "FRONT"
        },
        {
          "type": "product",
          "id": "product_1",
          "label": "Product 1"
        },
        {
          "type": "product",
          "id": "product_2",
          "label": "Product 2"
        },
        {
          "type": "product",
          "id": "product_3",
          "label": "Product 3"
        },
        {
          "type": "textarea",
          "id": "back_description",
          "label": "Back Description",
          "default": "Lorem ipsum, dolor sit amet consectetur adipisicing elit."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Flip Cards",
      "blocks": [
        {
          "type": "flip_card"
        }
      ]
    }
  ]
}
{% endschema %}
